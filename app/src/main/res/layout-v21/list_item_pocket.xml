<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SwipeActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:elevation="4dp"
    android:orientation="vertical"
    android:background="@drawable/my_rect">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/home_screen_image"
            android:scaleType="fitXY"
            android:contentDescription="@string/content_desc_placeholder_image"
            android:background="@color/placeholder_image_color"/>
        <TextView
            android:id="@+id/article_title"
            android:bufferType="spannable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:textSize="30sp"
            android:typeface="sans"
            android:textColor="@android:color/white"
            android:shadowRadius="2"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowColor="@android:color/black"
            android:background="@color/image_overlay_background"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </FrameLayout>
    <TextView
        android:id="@+id/article_excerpt"
        android:bufferType="spannable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:textSize="20sp"
        android:padding="10dp"/>
</LinearLayout>
