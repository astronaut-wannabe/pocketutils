<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/article_excerpt"
        android:bufferType="spannable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/article_excerpt"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/home_screen_image"
            android:scaleType="fitXY"
            android:contentDescription="@string/content_desc_placeholder_image"
            android:background="@color/placeholder_image_color"/>
        <TextView
            android:id="@+id/article_title"
            android:bufferType="spannable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/default_gap"
            android:textSize="30sp"
            android:typeface="sans"
            android:textColor="@android:color/white"
            android:shadowRadius="2"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowColor="@android:color/black"
            android:background="@color/image_overlay_background"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </FrameLayout>

    <TextView
        android:id="@+id/article_id"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</merge>
