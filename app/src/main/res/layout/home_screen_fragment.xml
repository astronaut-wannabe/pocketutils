<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="300dp"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Check for Duplicates"
        android:id="@+id/home_screen_duplicates"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Shuffle List"
        android:id="@+id/home_screen_pocket_tinder"
        android:layout_above="@id/home_screen_duplicates"
        android:layout_centerHorizontal="true"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_alignParentTop="true"
        android:layout_above="@id/home_screen_pocket_tinder">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/home_screen_image"
            android:contentDescription="@string/content_desc_placeholder_image"
            android:background="@color/placeholder_image_color"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/default_gap"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:shadowRadius="2"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowColor="@android:color/black"
            android:background="@color/image_overlay_background"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/home_screen_label"/>
    </FrameLayout>
</RelativeLayout>